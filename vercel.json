{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/admin/status",
      "dest": "/api/admin/status.js"
    },
    {
      "src": "/api/cron/daily-notification",
      "dest": "/api/cron/daily-notification.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-notification",
      "schedule": "0 12 * * *"
    }
  ]
}
